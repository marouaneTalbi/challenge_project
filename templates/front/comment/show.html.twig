{% extends 'base_front.html.twig' %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ comment.message }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="buttonContainer">
        <button class="button">
            <a href="{{ path('front_app_comment_index') }}"><i class="fa-solid fa-arrow-left"></i></a>
        </button>
        <button class="button">
            <a href="{{ path('front_app_comment_edit', {'id': comment.id}) }}">edit</a>
        </button>
        {{ include('front/comment/_delete_form.html.twig') }}

    </div>



{% endblock %}
