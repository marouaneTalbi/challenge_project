<form method="post" action="{{ path('front_app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="button">
        <i class="fa-solid fa-trash"></i>
    </button>
</form>
