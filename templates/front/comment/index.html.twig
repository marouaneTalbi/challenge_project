{% extends 'base_front.html.twig' %}

{% block body %}
<title>Comment index</title>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.message }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <div class="actionTable">
                        <button class="button">
                            <a href="{{ path('front_app_comment_show', {'id': comment.id}) }}">
                                <i class="fa-solid fa-eye"></i></a>
                        </button>
                        <button class="button">
                            <a href="{{ path('front_app_comment_edit', {'id': comment.id}) }}">
                                <i class="fa-solid fa-pencil"></i></a>
                        </button>
                        {% include 'front/comment/_delete_form.html.twig' %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('front_app_comment_new') }}">Create new</a>
{% endblock %}
