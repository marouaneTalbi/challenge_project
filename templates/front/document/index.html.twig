{% extends 'base_front.html.twig' %}

{% block body %}
    <h1 class="mainTitle">Document index</h1>

    <button class="addButton">
        <a href="{{ path('front_app_document_new') }}">Create new</a>
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>Size</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.type }}</td>
                <td>{{ document.name }}</td>
                <td>{{ document.size }}</td>
                <td>{{ document.url }}</td>

                <td>
                    <div class="actionTable">
                        <button class="button">
                            <a href="{{ path('front_app_document_show', {'id': document.id}) }}">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </button>
                        <button class="button">
                            <a href="{{ path('front_app_document_edit', {'id': document.id}) }}">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </button>
                        {% include 'front/document/_delete_form.html.twig' %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
