{% extends 'base_front.html.twig' %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ document.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ document.size }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ document.url }}</td>
            </tr>
        </tbody>
    </table>

    <div class="buttonContainer">
        <button class="button">
            <a href="{{ path('front_app_document_index') }}"><i class="fa-solid fa-arrow-left"></i></a>
        </button>
        <button class="button">
            <a href="{{ path('front_app_document_edit', {'id': document.id}) }}">edit</a>
        </button>
        {{ include('front/document/_delete_form.html.twig') }}

    </div>

{% endblock %}
