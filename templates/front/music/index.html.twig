{% extends 'base_front.html.twig' %}
{% block body %}
    <h1>Music index</h1>
    <button class="addButton">
        <a href="{{ path('front_app_music_new') }}">Create new</a>
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Size</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for music in music %}
            <tr>
                <td>{{ music.id }}</td>
                <td>{{ music.name }}</td>
                <td>{{ music.url }}</td>
                <td>{{ music.size }}</td>
                <td>{{ music.type }}</td>
                 <td>
                     <div class="actionTable">
                         <button class="button">
                            <a href="{{ path('front_app_music_show', {'id': music.id}) }}">
                            <i class="fa-solid fa-eye"></i></a>
                        </button>
                        {% if is_granted('ROLE_ADMIN')  %}
                            <button class="button">
                                <a href="{{ path('front_app_music_edit', {'id': music.id}) }}">
                                    <i class="fa-solid fa-pencil"></i></a>
                            </button>
                            {% include 'front/music/_delete_form.html.twig' %}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
