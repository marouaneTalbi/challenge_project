{% extends 'base_front.html.twig' %}

{% block body %}
    <section class="profile-index">
        {{ include('front/navbar.html.twig') }}


        <div class="header">
        {{ form_start(form) }}
            <img class="picture" src="{{ asset('images/' ~  user.image) }}" alt="logo" />
            <div class="infos">
                <div class="top">
                    <h2>{{ user.lastname }} {{ user.firstname }}</h2>
                        {% if highestRole == "ROLE_ARTIST" %}
                        <div class="role">
                            Artist
                        </div>
                        {% endif %}
                        {% if highestRole == "ROLE_MANAGER" %}
                        <div class="role manager">
                            Manager
                        </div>
                        {% endif %}
                        {% if highestRole == "ROLE_FAN" %}
                        <div class="role fan">
                            Fan
                        </div>
                        {% endif %}
                </div>
                <div class="bottom">
                    {% if music_groups is not empty %}
                        <h3>Groupe de musique :</h3>
                        {% for music_group in music_groups %}
                            <a href="{{ path('front_app_music_group_show', {'id': music_group.id}) }}">{{ music_group.name }}</a>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <h1 class="mainTitle">Edit Profile</h1>

    <div class="container"> 
        <div class="loginImageContainer">
            <img src="{{ asset('images/' ~  user.image) }}" alt="logo" class="loginLogo">
        </div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <button class="button">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}

    <div class="container">
         {% if music_groups|length != 0 %}
           <h1 class="mainTitle">Music Groups</h1>
         {% endif %}
        {% for music_group in music_groups %}
              <button class="button">
                  <a href="{{ path('front_app_music_group_show', {'id': music_group.id}) }}">
                      {{music_group.name}}
                  </a>
              </button>
        {% endfor %}
    </div> 
{% endblock %}