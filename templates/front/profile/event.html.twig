{% extends 'base_front.html.twig' %}

{% block body %}
    <section class="profile-event">
        <h2>Liste de vos évènements</h2>
        {% for event in events %}
            {% for event in events %}
            <a class="event-card" href="{{ path('front_app_event_show', {'id': event.id}) }}">
                <div class="header">
                    <span>{{ event.musicGroup.name }} à {{ event.lieu }}</span>
                    <span>{{ event.eventStart ? event.eventStart|date('Y-m-d') : '' }}</span>
                </div>
                <h5>{{ event.title }}</h5>
                <p>{{ event.description }}</p>
            </a>
            {% endfor %}
            {% else %}
            <span>Vous êtes invité à aucun évènement</span>
        {% endfor %}
                {{ include('front/navbar.html.twig') }}

    </section>
{% endblock %}