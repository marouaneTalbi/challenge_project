{% extends 'base_front.html.twig' %}
{% block body %}
    <section class="playlist-index">
        <h2>Liste des playlists <a class="btn" href="{{ path('front_app_playlist_new') }}">Cr√©er une playlist</a></h2>
        <ul>
        {% for playlist in playlists %}
            {% if playlist.public %}
                <li>
                    <a href="{{ path('front_app_playlist_show', {'id': playlist.id}) }}">{{ playlist.name }}</a>
                </li>
            {% endif %}
        {% endfor %}
        </ul>
    </section>
{% endblock %}
