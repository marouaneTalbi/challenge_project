{% extends 'base_front.html.twig' %}
{% block body %}
    <h1 class="mainTitle">Playlist index</h1>
    <button class="addButton">
        <a href="{{ path('front_app_playlist_new') }}">Create new</a>
    </button>

    <button class="addButton">
        <a href="{{ path('front_app_show_myplaylist') }}">My playlist</a>
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Public</th>
                {% if is_granted('ROLE_ADMIN')  %}
                    <th>actions</th>
                {% endif %}

            </tr>
        </thead>
        <tbody>
        {% for playlist in playlists %}
            {% if playlist.public %}
            <tr>
                <td>{{ playlist.id }}</td>
                <td>{{ playlist.name }}</td>
                <td>{{ playlist.image }}</td>
                <td>{{ playlist.public ? 'Yes' : 'No' }}</td>
                {% if is_granted('ROLE_ADMIN')  %}
                <td>
                    <div class="actionTable">
                        <button class="button">
                            <a href="{{ path('front_app_playlist_show', {'id': playlist.id}) }}">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </button>
                        <button class="button">
                            <a href="{{ path('front_app_playlist_edit', {'id': playlist.id}) }}">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </button>
                        {% include 'front/playlist/_delete_form.html.twig' %}

                    </div>
                </td>
                {% endif %}

            </tr>
            {% endif %}

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

{% endblock %}
