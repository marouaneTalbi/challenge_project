<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js" integrity="sha256-z82jYOK/utiAteR0z6FjIOQmdWzvxqXJ6wsXbGJkBwY=" crossorigin="anonymous"></script>
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if (is_granted('ROLE_FAN') or is_granted('ROLE_MANAGER')) %}
            <nav>
                <ul class="front_nav_ul">
                    <li class="front_nav_li"><a href="{{ path('front_default_index') }}">Accueil</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_app_profile') }}">Profile</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_default_artists') }}">Liste des Artistes</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_default_music_groups') }}">Liste des Groupes</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_app_music_index') }}">Music</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_app_playlist_index') }}">PlayList</a></li>
                    <li class="front_nav_li"><a href="{{ path('front_app_event_index') }}">Liste des Events</a></li>

                    {% if (is_granted('ROLE_ADMIN')) %}
                        <li class="front_nav_li"><a href="{{ path('front_app_document_index') }}">Document</a></li>
                        <li class="front_nav_li"><a href="{{ path('front_app_comment_index') }}">Comment</a></li>
                        <li class="front_nav_li"><a href="{{ path('back_default_index') }}">Panel d'admin</a></li>
                    {% endif %}
                    {# <li class="front_nav_li"><a href="{{ path('front_default_become-artist') }}">Devenir artiste</a></li> #}
                    {% if (is_granted('ROLE_MANAGER')) %}
                        <li class="front_nav_li"><a href="{{ path('front_app_music_group_new') }}">Creer un groupe</a></li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
