<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if (is_granted('ROLE_FAN') or is_granted('ROLE_MANAGER')) %}
            <nav>
                <ul class="front_nav_ul">
                    <li class="front_nav_li"><a href="{{ path('front_default_index') }}">Accueil</a></li>
                    {% if (is_granted('ROLE_MANAGER')) %}
                        <li class="front_nav_li"><a href="{{ path('back_default_index') }}">Panel d'admin</a></li>
                    {% endif %}
                    {# <li class="front_nav_li"><a href="{{ path('front_default_become-artist') }}">Devenir artiste</a></li> #}
                    {% if (is_granted('ROLE_ARTIST')) %}
                        {# <li class="front_nav_li"><a href="{{ path('front_group_index') }}">Creer un groupe</a></li> #}
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
