{% extends 'base_back.html.twig' %}

       {% block stylesheets %}
           {{ parent() }}
           {{ encore_entry_link_tags('app') }}
       {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

{% block body %}
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                 <td>
                {% for role in user.roles %}
                    {{role}}
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            </tbody>
        </table>
    <div class="buttonContainer">
        <button class="button">
            <a href="{{ path('back_user_index') }}">back to list</a>
        </button>

        <button class="button">
            <a href="{{ path('back_user_edit', {'id': user.id}) }}">edit</a>
        </button>

        {% include 'back/user/_delete_form.html.twig' %}
        
    </div>

{% endblock %}
