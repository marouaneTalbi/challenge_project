{% extends 'base_back.html.twig' %}

{% block body %}
    <section class="admin-user-list">
        <h2>Liste des utilisateurs</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>FIRSTNAME</th>
                    <th>EMAIL</th>
                    <th>ROLES</th>
                    {# <th>Password</th> #}
                    <th>ACTIONS</th>
                </tr>
            </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>

                <td>{{ user.email }}</td>
                <td>
                {% for role in user.roles %}
                    {{role}}
                {% endfor %}
                </td>

                {# <td>{{ user.password }}</td> #}
                <td class="actionTable">
                    <button class="button">
                        <a href="{{ path('back_user_show', {'id': user.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    </button>
                    <button class="button">
                        <a href="{{ path('back_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pencil"></i></a>
                    </button>
                    {% include 'back/user/_delete_form.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </section>

{% endblock %}
